# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres/amex_coding

# Redis
REDIS_URL=redis://redis:6379

# JWT Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Email Configuration
EMAIL_FROM=GL@sukut.com
USE_OUTLOOK_AUTOMATION=false
USE_GRAPH_API=true

# Microsoft Graph API (Required for direct email sending)
# To obtain these:
# 1. Register an app in Azure AD
# 2. Grant Mail.Send permission
# 3. Create a client secret
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Frontend URL
FRONTEND_URL=http://sukutapps.com

# First superuser
FIRST_SUPERUSER_EMAIL=admin@sukut.com
FIRST_SUPERUSER_PASSWORD=changeme
FIRST_SUPERUSER_FIRST_NAME=Admin
FIRST_SUPERUSER_LAST_NAME=User
EOF < /dev/null